<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="Content/css/vendor.min.css">
    <link rel="stylesheet" href="~/Content/css/elephant.min.css">
    <link rel="stylesheet" href="~/Content/css/application.min.css">
    <link rel="stylesheet" href="~/Content/css/demo.min.css">
    <style>
        .logo {
            margin: 10px;
            height:45px;
            width:auto;
        }

        .layout-footer {
            margin-left: 0 !important;
        }
    </style>
</head>
<body class="layout layout-header-fixed">
    <div class="layout-header">
        <img class="logo" src="~/Content/img/logo.jpg" alt="Caretta Yazılım">
    </div>
    <div class="layout-main">
        <div class="layout-content">
            <div class="layout-content-body  col-md-offset-2">
                @RenderBody()
            </div>
        </div>
        <div class="layout-footer">
            <div class="layout-footer-body">
                <small class="version">Version 1.0.0</small>
                <small class="copyright">2020 &copy; <a href="http://www.caretta.net/">Caretta Yazılım</a></small>
            </div>
        </div>
    </div>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
</body>
</html>
