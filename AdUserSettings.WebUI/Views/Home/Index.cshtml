@model AdUserSettings.WebUI.Models.Users.UserVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<br />
<form asp-controller="home" asp-action="index" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="title-bar">
        <h1 class="title-bar-title">
            <span class="d-ib">Form layouts</span>
            <span class="d-ib">
                <a class="title-bar-shortcut" href="#" title="" data-container="body" data-toggle-text="Remove from shortcut list" data-trigger="hover" data-placement="right" data-toggle="tooltip" data-original-title="Add to shortcut list">
                    <span class="sr-only">Add to shortcut list</span>
                </a>
            </span>
        </h1>
        <p class="title-bar-description">
            <small>Forms presented below show how the elements of a form can be displayed differently.</small>
        </p>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form form-horizontal">
                <div class="form-group">
                    <div class="col-xs-6">
                        <label for="adusername">Active Directory Username</label>
                        <input class="form-control" type="text" placeholder="UserName" autocomplete="off" asp-for="UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        @TempData["UserMessage"]
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        <button class="btn btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
